#!/usr/bin/perl -w

use strict;
use lib $ENV{'QCHASM'};

use Getopt::Long;
use Pod::Usage;

unshift @INC, ("$ENV{'QCHASM'}/AaronTools/bin");
require _utils;

sub main {
    my $reffile = shift;
    my %opt     = @_;

	# grab coords
	# grab frequencies
	# if animate, 10 steps each in + and - direction
	# >>coord_shift for each step
	# >>printXYZ each
	# else, one step in specified direction
	# >>coord_shift
	# >>printXYZ
}

# read in options
my %opt;
$opt{help}  = '';
$opt{write} = '-';
GetOptions( 'help|h'    => \$opt{help},
            'animate|a' => \$opt{animate},
            'mode|m=i'  => \$opt{mode},
            'reverse|r' => \$opt{reverse},
            'write|w:s' => \$opt{write} )
  or pod2usage(
    { -exitval => 1,
      -verbose => 1
    } );
pod2usage(0) if $opt{help};

pod2usage(
    { -message => "Please provide a reference geometry",
      -exitval => 1,
      -verbose => 1
    } ) unless ( $ARGV[0] );

&main( $ARGV[0], %opt );

=pod

=head1 SYNOPSIS

follow [options] filename

=head1 OPTIONS

=over

=item B<-w [directory]>, B<--write [directory]>

Save files instead of printing to STDOUT. Defaults to current directory.

=item B<-h>, B<--help>

Print this help message and exit

=back

=cut

